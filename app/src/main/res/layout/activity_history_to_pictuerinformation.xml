<?xml version="1.0" encoding="utf-8"?>
<jsc.kit.component.vscrollscreen.VScrollScreenLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_scroll_screen_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:vssl_default_page_index="0"
    app:vssl_y_slide_ratio="0.45"
    android:background="#FFFFFF"
    android:theme="@android:style/Theme.NoDisplay"
    tools:context=".HistoryToPictuerinformation">


    <!--vssl_default_page_index表示默认展示滑动页面的第0页，也就是第一页-->
    <!--first page-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--
                    <jsc.kit.component.archeaderview.LGradientArcHeaderView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:ahv_end_color="#3300BA86"
                        app:ahv_height="40dp"
                        app:ahv_start_color="#FF00BA86" />
                        -->

            <jsc.kit.component.archeaderview.PictureArcHeaderView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:ahv_direction="downInSide"
                app:ahv_height="30dp"
                android:id="@+id/image_pic"
                />


            <TextView
                android:id="@+id/textview"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Loading......"
               />

            <TextView
                android:id="@+id/textview_potry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/K"
                android:textColor="#000000" />


        </LinearLayout>
    </ScrollView>

    <!--second page-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <jsc.kit.component.archeaderview.PictureArcHeaderView
                android:id="@+id/image_pic1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:ahv_direction="downInSide"
                app:ahv_height="30dp"
                app:ahv_src="@drawable/cucumber1" />

            <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#000000"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                />

        </LinearLayout>

    </ScrollView>



</jsc.kit.component.vscrollscreen.VScrollScreenLayout>



